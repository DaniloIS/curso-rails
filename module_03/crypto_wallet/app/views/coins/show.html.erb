<p style="color: green"><%= notice %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= @coins.human_attribute_name(:description) %></th>
      <th scope="col"><%= @coins.human_attribute_name(:acronym) %></th>
      <th scope="col"><%= @coins.human_attribute_name(:url_image) %></th>
      <th scope="col">#</th>
    </tr>
  </thead>
    <tbody>
      <%= render @coin %>
    </tbody>
</table>

<div>
  <%= link_to t("links.edit"), edit_coin_path(@coin), class: "btn btn-primary" %> |
  <%= link_to t("links.back"), coins_path, class: "btn btn-primary" %>

  <%= button_to t("links.delete"), @coin, method: :delete, class: "btn btn-danger" %>
</div>
