<h1>Administradores</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">translate_attribute(@admins, :email)</th>
      <th scope="col">
        <%= link_to  new_admins_backoffice_admin_path, class: "btn btn-success btn-circle" do %>
          <i class="fa fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
      <% @admins.each do |admin| %>
      <tr>
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td>
            <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_admin_path(admin), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir esse adminstrador?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
      </tr>
      <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= paginate @admins %>
</div>