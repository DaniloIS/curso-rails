<h1>Perguntas</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= translate_attribute(@questions, :description) %></th>
      <th scope="col"><%= translate_attribute(@questions, :subject) %></th>
      <th scope="col">
        <%= link_to  new_admins_backoffice_question_path, class: "btn btn-success btn-circle" do %>
          <i class="fa fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
      <% @questions.each do |question| %>
      <tr>
          <td><%= question.id %></td>
          <td><%= question.description.truncate(50) %></td>
          <td><%= question.subject.description.truncate(30) %></td>
          <td>
            <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_question_path(question), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir essa pergunta?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
      </tr>
      <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= paginate @questions %>
</div>