<h1>Assuntos/Área</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">translate_attribute(@subjects, :description)</th>
      <th scope="col">
        <%= link_to  new_admins_backoffice_subject_path, class: "btn btn-success btn-circle" do %>
          <i class="fa fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
      <% @subjects.each do |subject| %>
      <tr>
          <td><%= subject.id %></td>
          <td><%= subject.description %></td>
          <td>
            <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_subject_path(subject), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir esse assunto/área?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
      </tr>
      <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= paginate @subjects %>
</div>